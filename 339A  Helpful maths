#include<iostream>
#include<conio.h>
#include<string>
#include<algorithm>
using namespace std;
int main()
{
    string s;
    string s1;
    cin>>s;
    for(int i=0,j=0;i<s.length();i=i+2,j++)
    {
        s1.push_back(s[i]);
    }
    
    sort(s1.begin(),s1.end());
    cout<<s1[0];
    for(int i=1;i<s1.length();i++)
      {
        cout<<'+'<<s1[i];
      }
    
}
